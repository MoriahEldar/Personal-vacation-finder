<UserControl x:Class="PLWPF.OrderManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF"
             mc:Ignorable="d" 
             d:DesignHeight="670" d:DesignWidth="970">
    <Grid>
        <ListView x:Name="listView" Background="Transparent" HorizontalAlignment="Left" Height="610" Margin="0,60,0,0" VerticalAlignment="Top" Width="970">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="search" Style="{StaticResource ResourceKey=GeneralText}" Margin="110,23,0,0" TextChanged="search_TextChanged"/>
        <Label x:Name="label" Content="Search" Style="{StaticResource ResourceKey=GeneralLabel}" Margin="10,10,0,0" Width="116"/>

    </Grid>
</UserControl>
