<Window x:Class="PLWPF.ManagerConfirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="ManagerConfirm" Height="150" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <PasswordBox x:Name="passwordText" HorizontalAlignment="Left" Height="26" Margin="170,32,0,0" VerticalAlignment="Top" Width="156"/>
        <Label x:Name="label_Copy" Content="Password:" Style="{StaticResource GeneralLabel}" HorizontalAlignment="Left" Height="40" Margin="54,20,0,0" VerticalAlignment="Top" Width="110" FontSize="20" RenderTransformOrigin="0.455,0.525"/>
        <Button x:Name="Log" Content="Log in" Style="{StaticResource GeneralButton}" Margin="138,70,0,0" Width="112" Click="Log_Click" Height="33" FontSize="18"/>

    </Grid>
</Window>
